@model IEnumerable<GymPlanner.Models.Exercise>

@{
    ViewData["Title"] = "Exercises";
}

<h1>Exercises</h1>

<p>
    <a asp-action="Create" asp-route-workoutDayId="@ViewBag.WorkoutDayId">Create Exercise</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Weight</th>
            <th>Sets</th>
            <th>Reps</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Weight</td>
                <td>@item.Sets</td>
                <td>@item.Reps</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-controller="WorkoutDays" asp-action="Index"
       asp-route-programId="@ViewBag.ProgramId">Back to Days</a>
</p>