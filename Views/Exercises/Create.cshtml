@model GymPlanner.Models.Exercise
@{
    ViewData["Title"] = "Create";
}
<h1>Create</h1>
<h4>Exercise</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="createExerciseForm" asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Weight" class="control-label"></label>
                <input asp-for="Weight" class="form-control" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sets" class="control-label"></label>
                <input asp-for="Sets" class="form-control" />
                <span asp-validation-for="Sets" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Reps" class="control-label"></label>
                <input asp-for="Reps" class="form-control" />
                <span asp-validation-for="Reps" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Workout Day</label>
                <select id="WorkoutDayId" name="WorkoutDayId" class="form-control">
                    @foreach (var day in ViewData["WorkoutDayDropdown"] as SelectList)
                    {
                        <option value="@day.Value">@day.Text</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <p>
        <a asp-controller="Exercises" asp-action="Index"
           asp-route-workoutDayId="@ViewBag.WorkoutDayId">Back to Exercises</a>
    </p>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        document.getElementById("createExerciseForm").onsubmit = e => {
            const weight = parseFloat(document.getElementById("Weight").value);
            const sets = parseInt(document.getElementById("Sets").value);
            const reps = parseInt(document.getElementById("Reps").value);
            if ((isNaN(sets) || sets <= 0 || sets > 30) ||
                (isNaN(weight) || weight < 0 || weight > 500) ||
                (isNaN(reps) || reps <= 0 || reps > 100)) {
                alert("Please enter valid sets (1-30), weight (0-500), and reps (1-100)");
                e.preventDefault();
            }
         };
    </script>
}