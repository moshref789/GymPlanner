@model IEnumerable<GymPlanner.Models.WorkoutDay>

@{
    ViewData["Title"] = "Days";
}

<h1>Days</h1>

<p>
    <a asp-action="Create" asp-route-programId="@ViewBag.ProgramId">Create Day</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Day Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.DayName</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> |
                    <a asp-controller="Exercises" asp-action="Index"
                       asp-route-workoutDayId="@item.Id">
                        View Exercises
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<p>
    <a asp-controller="TrainingPrograms" asp-action="Index">Back to Programs</a>
</p>
