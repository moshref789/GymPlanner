@model GymPlanner.Models.WorkoutDay

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>WorkoutDay</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="DayName" class="control-label"></label>
                <input asp-for="DayName" class="form-control" />
